<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView android:text="Username" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_name"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/user_name_et"
        android:layout_alignStart="@+id/user_name_et" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:id="@+id/user_name_et"
        android:background="@android:drawable/edit_text"
        android:layout_below="@+id/user_name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Password"
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name_et"
        android:layout_alignLeft="@+id/password_et"
        android:layout_alignStart="@+id/password_et"
        android:layout_marginTop="95dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/edit_text"
        android:ems="10"
        android:id="@+id/password_et"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/user_name_et"
        android:layout_centerHorizontal="true" />
    <TextView
        android:text="Name"
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name_et"
        android:layout_alignStart="@+id/name_et"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/password_et"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/edit_text"
        android:ems="10"
        android:id="@+id/name_et"
        android:layout_below="@+id/name_text_view"
        android:layout_alignLeft="@+id/password_et"
        android:layout_alignStart="@+id/password_et" />
    <TextView
        android:text="Mobile"
        android:id="@+id/number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/number_et"
        android:layout_alignStart="@+id/number_et"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/name_et"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/edit_text"
        android:ems="10"
        android:layout_marginTop="4dp"
        android:inputType="number"
        android:id="@+id/number_et"
        android:layout_below="@+id/number_text_view"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:text="Address"
        android:id="@+id/address_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/address_et"
        android:layout_alignStart="@+id/address_et"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/number_text_view"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/edit_text"
        android:ems="10"
        android:id="@+id/address_et"
        android:layout_below="@+id/number_et"
        android:layout_alignLeft="@+id/number_et"
        android:layout_alignStart="@+id/number_et"
        android:layout_marginTop="32dp" />
    <Button
        android:text="Continue"
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
